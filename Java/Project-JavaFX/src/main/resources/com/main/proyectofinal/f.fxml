<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.main.proyectofinal.controllers.CreateController"
      prefHeight="400.0"
      prefWidth="600.0"
      spacing="10">

   <Label text="Create New Compu">
      <font>
         <Font name="System Bold" size="18" />
      </font>
   </Label>

   <GridPane hgap="10" vgap="10">
      <columnConstraints>
         <ColumnConstraints minWidth="100" prefWidth="150"/>
         <ColumnConstraints minWidth="100" prefWidth="200"/>
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
         <RowConstraints minHeight="10" prefHeight="30" />
      </rowConstraints>
      <children>
      <Label text="Código de archivo:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="codigoArchivoField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Label text="Número de inventario:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <TextField fx:id="numInventarioField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

      <Label text="Marca:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
      <TextField fx:id="marcaField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

      <Label text="Modelo:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
      <TextField fx:id="modeloField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

      <Label text="Número de serie:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
      <TextField fx:id="numSerialField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

      <Label text="Sucursal:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
      <TextField fx:id="sucursalField" GridPane.rowIndex="5" GridPane.columnIndex="1" />

      <Label text="Fecha de compra:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
      <DatePicker fx:id="fechaCompraPicker" GridPane.rowIndex="6" GridPane.columnIndex="1" />

      <Label text="Costo de compra:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
      <TextField fx:id="costoCompraField" GridPane.rowIndex="7" GridPane.columnIndex="1" />

      <Label text="Costo de reemplazo:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
      <TextField fx:id="costoReemplazoField" GridPane.rowIndex="8" GridPane.columnIndex="1" />

      <Label text="Tamaño de RAM:" GridPane.rowIndex="9" GridPane.columnIndex="0" />
      <TextField fx:id="ramSizeField" GridPane.rowIndex="9" GridPane.columnIndex="1" />

      <Label text="Tamaño de HDD:" GridPane.rowIndex="10" GridPane.columnIndex="0" />
      <TextField fx:id="hddSizeField" GridPane.rowIndex="10" GridPane.columnIndex="1" />

      <Label text="Placa base:" GridPane.rowIndex="11" GridPane.columnIndex="0" />
      <TextField fx:id="boardField" GridPane.rowIndex="11" GridPane.columnIndex="1" />

      <Label text="Tipo de monitor:" GridPane.rowIndex="12" GridPane.columnIndex="0" />
      <TextField fx:id="monitorTypeField" GridPane.rowIndex="12" GridPane.columnIndex="1" />

      <Label text="Tipo de mouse:" GridPane.rowIndex="13" GridPane.columnIndex="0" />
      <TextField fx:id="mouseTypeField" GridPane.rowIndex="13" GridPane.columnIndex="1" />

      <Label text="Tipo de impresora:" GridPane.rowIndex="14" GridPane.columnIndex="0" />
      <TextField fx:id="printerTypeField" GridPane.rowIndex="14" GridPane.columnIndex="1" />

         <Label text="Garantía:" GridPane.rowIndex="15" GridPane.columnIndex="0" />
         <TextField fx:id="garantiaField" GridPane.rowIndex="15" GridPane.columnIndex="1" />

         <Label text="Intervalo de mantenimiento:" GridPane.rowIndex="16" GridPane.columnIndex="0" />
         <TextField fx:id="mantenimientoIntervalField" GridPane.rowIndex="16" GridPane.columnIndex="1" />

         <Label text="Última fecha de mantenimiento:" GridPane.rowIndex="17" GridPane.columnIndex="0" />
         <DatePicker fx:id="lastMaintenanceDatePicker" GridPane.rowIndex="17" GridPane.columnIndex="1" />

         <Label text="Cantidad de reparaciones:" GridPane.rowIndex="18" GridPane.columnIndex="0" />
         <TextField fx:id="repairCountField" GridPane.rowIndex="18" GridPane.columnIndex="1" />

         <Label text="Costo total de reparaciones:" GridPane.rowIndex="19" GridPane.columnIndex="0" />
         <TextField fx:id="totalRepairCostField" GridPane.rowIndex="19" GridPane.columnIndex="1" />

         <Button text="Guardar" onAction="#handleGuardar" GridPane.rowIndex="20" GridPane.columnIndex="0" GridPane.columnSpan="2" />
      </children>
   </GridPane>
</VBox>
